<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAF7F7"
    tools:context="com.example.abhis.project128.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"

        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textview3"
            android:layout_width="368dp"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:text="Enter Your Article over here :-"
            android:textSize="22dp"
            />

        <EditText
            android:id="@+id/iptextView"
            android:layout_width="368dp"
            android:layout_height="145dp"
            android:gravity="top|left"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/textview3"
            android:background="@drawable/styyles"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:textSize="14dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iptextView"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="Submit"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="172dp" />

        <TextView
            android:id="@+id/textview4"
            android:layout_width="368dp"
            android:layout_height="35dp"
            android:layout_below="@id/button"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:text="Your Summary will appear here :-"
            android:textSize="22dp"
            />

        <TextView
            android:id="@+id/optextView"
            android:layout_width="366dp"
            android:layout_height="327dp"
            android:maxLines = "10"
            android:layout_below="@id/textview4"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical"
            android:layout_marginLeft="-15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:background="@drawable/styyles"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="242dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1F34F3"
            android:layout_above="@+id/textview4"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
